    public function deleteRecursiveById($idMenuItem)
    {
    	$criteria = new Criteria();
    	$criteria->add(MenuItem::ID_PARENT,$idMenuItem,Criteria::EQUAL);
    	$childs = $this->getByCriteria($criteria);
    	while ($childs->valid())
