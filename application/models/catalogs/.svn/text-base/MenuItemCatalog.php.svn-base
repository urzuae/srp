     */
    public function getByIdParent($idParent,Criteria $criteria)
    {
      $criteria->addAscendingOrderByColumn(MenuItem::ORDER);
      if(is_null($idParent))
        $criteria->add(MenuItem::ID_PARENT,$idParent,Criteria::IS_NULL);
      else
      	$criteria->add(MenuItem::ID_PARENT,$idParent,Criteria::EQUAL);
    	return $this->getByCriteria($criteria);
